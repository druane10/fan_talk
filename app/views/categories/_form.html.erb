<%= form_for @category, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :logo, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :logo, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :main_color, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :main_color, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :background_color, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :background_color, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  categories_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
